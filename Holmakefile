

# I got this from a Holmakefile found on Github. I think it just lists all files in the directory that need building.
THYFILES = $(patsubst %Script.sml,%Theory.uo,$(wildcard *.sml))
TARGETS = $(patsubst %.sml,%.uo,$(THYFILES))

all: $(TARGETS)

clean:
	Holmake --no_holmakefile clean && cd tests && Holmake clean

tests: uvmMemoryModelTheory.uo
	cd tests && Holmake clean && Holmake --holmakefile Holmakefile
